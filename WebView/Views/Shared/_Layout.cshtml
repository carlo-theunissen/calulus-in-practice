<html>
<head><title>>Awesome Logic application</title>
        <link rel="stylesheet" href="~/treant/Treant.css" />
        <link rel="stylesheet" href="~/css/site.css"/>
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
        <script src="https://unpkg.com/d3@3/d3.min.js"></script>
        <script src="https://unpkg.com/function-plot@1/dist/function-plot.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js"></script>
</head>
<body>
<div class="formulaContainer">
        <form method="get" asp-action="Calculate" asp-controller="Home">

                
                <div class="form-group">
                        <label for="exampleInputEmail1">Tries</label>
                        <input type="number" value="@(Model.Request.Request.Query["tries"] ?? "10000")" name="tries" class="form-control" id="exampleInputEmail1" >
                </div>
                
                <div class="form-group">
                        <label for="exampleInputEmail1">Poisson Tries</label>
                        <input type="number" value="@(Model.Request.Request.Query["poissonTries"] ?? "10000")" name="poissonTries" min="0" class="form-control" id="exampleInputEmail1" >
                </div>
                
                <div class="form-group">
                        <label for="exampleInputEmail1">Lambda</label>
                        <input type="text" value="@(Model.Request.Request.Query["poissonLambda"] ?? "0.5")" name="poissonLambda" min="0" class="form-control" id="exampleInputEmail1" >
                </div>
                <div class="form-group">
                        <label for="exampleInputEmail1">Interval</label>
                        <input type="text" value="@(Model.Request.Request.Query["interval"] ?? "0.5")" name="interval" min="0" class="form-control" id="exampleInputEmail1" >
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>
@RenderBody()

<div class="formulaContainer">
        Proudly built by Carlo Theunissen
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/Chart.min.js" asp-append-version="true"></script>
<script src="~/treant/vendor/raphael.js" asp-append-version="true"></script>
<script src="~/treant/Treant.js" asp-append-version="true"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
